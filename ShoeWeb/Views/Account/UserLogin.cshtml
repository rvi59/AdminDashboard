@model ShoeWeb.Models.LoginUser

@{
    ViewBag.Title = "UserLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("UserLogin", "Account", FormMethod.Post))
{

    @Html.AntiForgeryToken()

    <div class="container" style="min-height: 450px; margin-top: 5%;">
        <div class="row myrow">
            <div class="col-md-6" style="background-color: #f7f8fa;">
                <img src="~/Content/Images/LoginImg.png" alt="Alternate Text" class="img-fluid img1" />
                <br />
               
            </div>
            <div class="col-md-6 leftside">
                <div>
                    <center>
                        <h1 id="myLogHead" style="color: #56B2BD; font-weight: bold; font-family: 'Lato', sans-serif; margin-top: 14px; margin-bottom: 12px;">Login Here</h1>
                    </center>
                </div>
                <div style="width: 80%; margin: auto; margin-top: 50px;">

                    <div class="form-group">

                        @Html.LabelFor(model => model.U_Email, htmlAttributes: new { @class = "lbl" })
                        @Html.EditorFor(model => model.U_Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.U_Email, "", new { @class = "text-danger" })

                    </div>

                    <div class="form-group">

                        @Html.LabelFor(model => model.U_Password, htmlAttributes: new { @class = "lbl" })
                        @Html.EditorFor(model => model.U_Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.U_Password, "", new { @class = "text-danger" })

                    </div>


                    <div class="form-group">
                        @Html.LabelFor(model => model.RememberMe)
                        @Html.CheckBoxFor(model => model.RememberMe)
                    </div>

                   
                    @*<div class="form-group">
                        <a href="ForgotPassword.aspx">Forget Password</a>
                    </div>*@
                    <div class="form-group">
                        <center>
                            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                            {
                                <h6 style="color:red;">@ViewBag.ErrorMessage</h6>
                            }
                        </center>
                    </div>


                    <div class="logRespo0">

                        <input type="submit" id="Loginbtn" value="Login" class="Loginbtn" />
                    </div>


                </div>
                <center>
                </center>
            </div>
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


