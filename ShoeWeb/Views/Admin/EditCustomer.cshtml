@model ShoeWeb.Models.User

@{
    ViewBag.Title = "EditCustomer";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}

<h2>EditCustomer</h2>

@using (Html.BeginForm("EditCustomer", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />

    @Html.HiddenFor(model => model.User_Id)

    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(model => model.U_Email, htmlAttributes: new { @class = "control-label" })
        </div>
        <div class="col-md-10">
            @Html.DisplayFor(model => model.U_Email, new { htmlAttributes = new { @class = "form-control readonly" } })
        </div>
    </div>

    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(model => model.U_FirstName, htmlAttributes: new { @class = "control-label" })
        </div>
        <div class="col-md-10">
            @Html.DisplayFor(model => model.U_FirstName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(model => model.isActive, htmlAttributes: new { @class = "control-label" })
        </div>
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.isActive)
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
    </div>
</div>
}
<br />
<div>
    @Html.ActionLink("Back to List", "CustomerList", "Admin", new { @class = "btn btn-dark" })
</div>
