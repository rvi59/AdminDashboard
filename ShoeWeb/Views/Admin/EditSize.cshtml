@model ShoeWeb.Models.Sizze

@{
    ViewBag.Title = "EditSize";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}

<h2>EditSize</h2>

@using (Html.BeginForm("EditSize", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.Size_Id)

    <div class="form-group">
        @Html.LabelFor(model => model.Size_Number, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Size_Number, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Size_Number, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "SizeList", "Admin", new { @class = "btn btn-dark" })
</div>
